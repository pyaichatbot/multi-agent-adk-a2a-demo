# Azure OpenAI Configuration Template
# Copy this file to .env and fill in your Azure OpenAI credentials

# Azure OpenAI API Configuration
AZURE_API_KEY=your_azure_openai_api_key_here
AZURE_API_BASE=https://your-resource-name.openai.azure.com/
AZURE_API_VERSION=2024-02-15-preview

# Optional: Model-specific configurations
# Default model to use across all agents
DEFAULT_AZURE_MODEL=gpt-4o

# Optional: Deployment-specific settings
# If you have specific deployments for different use cases
ORCHESTRATOR_AZURE_MODEL=gpt-4o
DATA_SEARCH_AZURE_MODEL=gpt-4o
REPORTING_AZURE_MODEL=gpt-4o
EXAMPLE_AGENT_AZURE_MODEL=gpt-4o

# Optional: Advanced LiteLLM settings
# Temperature and token limits can be overridden per agent
DEFAULT_TEMPERATURE=0.1
DEFAULT_MAX_TOKENS=2000

# Optional: Fallback configuration
# If Azure OpenAI is unavailable, fallback to OpenAI
ENABLE_FALLBACK=false
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Logging and debugging
LITELLM_LOG_LEVEL=INFO
LITELLM_DEBUG=false

# Optional: Rate limiting and retry settings
MAX_RETRIES=3
RETRY_DELAY=1.0
TIMEOUT=30.0
